<h1>Daftar Data Keagamaan Katolik</h1>

<table>
  <thead>
    <tr>
      <th>Judul</th>
      <th>Keterangan</th>
      <th>Tautan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_keagamaan_katolik.each do |data_keagamaan_katolik| %>
      <tr>
        <td><%= data_keagamaan_katolik.judul %></td>
        <td><%= data_keagamaan_katolik.keterangan %></td>
        <td><%= data_keagamaan_katolik.tautan %></td>
        <td><%= link_to 'Tampilkan', data_keagamaan_katolik %></td>
      <% if pengguna_signed_in? %>
        <% if @pengguna.pegawai_pendakat? || @pengguna.penyelenggara_pendakat? || @pengguna.administrator? %>
        <td><%= link_to 'Edit', edit_data_keagamaan_katolik_path(data_keagamaan_katolik) %></td>
        <td><%= link_to 'Hapus', data_keagamaan_katolik, method: :delete, data: { confirm: 'Anda yakin mau menghapusnya?' } %></td>
        <% end %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Membuat Data Keagamaan Katolik', new_data_keagamaan_katolik_path %>
