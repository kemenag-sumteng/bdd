<div class="container mt-4">
  <div class="row">
    <div class="col-md-10"><h2>Daftar Data Keagamaan Katolik</h2></div>
    <div class="col-sm-2">
      <%= link_to fa_icon("arrow-left"), beranda_index_path, :class => "btn btn-secondary", :title => "Kembali ke Beranda"  %>
      <%= link_to fa_icon("plus-square"), new_data_keagamaan_katolik_path, :class => "btn btn-success", :title => "Membuat data keagamaan katolik"  %>
      </div>
  </div>
</div>
<div class="row">
<% @data_keagamaan_katolik.each do |data_keagamaan_katolik| %>
  <div class="col-sm-4 p-2">
    <div class="card border-primary">
      <div class="card-body">
      <p class="card-title"><strong><%= data_keagamaan_katolik.judul %></strong></p>
      <small><i>Pembuat: <%= data_keagamaan_katolik.pengguna.nama_lengkap %></i></small>
      <div class="card-text">
        <p><%= truncate(data_keagamaan_katolik.keterangan) %></p>
        <p><%= truncate(data_keagamaan_katolik.tautan) %></p>
      </div>
        <div class="btn-group btn-group-lg float-right" role="group" aria-label="Basic example">
          <%= link_to fa_icon("eye"), data_keagamaan_katolik, :class => "btn btn-success", :title => "Lihat #{data_keagamaan_katolik.judul}" %>
        <% if pengguna_signed_in? %>
          <% if current_pengguna.pegawai_pendakat? || current_pengguna.penyelenggara_pendakat? || current_pengguna.administrator? %>
          <%= link_to fa_icon("pencil"), edit_data_keagamaan_katolik_path(data_keagamaan_katolik), :class => "btn btn-warning", :title => "Edit #{data_keagamaan_katolik.judul}"  %>
          <%= link_to fa_icon("trash"), data_keagamaan_katolik, method: :delete, data: { confirm: "Anda yakin akan menghapus #{data_keagamaan_katolik.judul}?" }, :class => "btn btn-danger", :title => "Hapus #{data_keagamaan_katolik.judul}"  %>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<div class="container pagination justify-content-center" >
  <%= paginate @data_keagamaan_katolik, :param_name => "daftar_data_keagamaan_katolik_page", :class => "pagination-sm" %>
</div>
<p style="text-align: center;"><%= page_entries_info @data_keagamaan_katolik, entry_name: 'data keagamaan katolik' %></p>
</div>