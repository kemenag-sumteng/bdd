<div class="card-container-fluid-custom">
<div class="col-12">
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="col">
    <div class="card border-primary">
      <div class="card-body">
      <p class="card-title"><strong><h2><%= t('.update') %></h2></strong></p>
      <div class="card-text">
        <small>
          <p>Untuk memperbarui data Anda, mohon lengkapi data yang dibutuhkan di bawah ini:</p>
        </small>
      </div>
      <div class="card-text">
        <%= f.text_field :nama_lengkap %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <% if @minimum_password_length %>
        <small>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        </small>
      <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <small>
          <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i>
        </small>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
        <%= f.submit t('.update'), :class => "btn btn-primary btn-lg btn-block" %>
        <%= link_to t('devise.shared.links.back'), :back, :class => "btn btn-secondary btn-lg btn-block" %>
      </div>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>